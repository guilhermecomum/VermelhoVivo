{% extends "base.twig" %}

{% block content %}
<section id="destaques">
  <div class="row">
    {% for destaque in destaques | slice(0, 1) %}
    <div class="large-6 columns">
      <div class="post main">
        <img src="{{destaque.thumbnail.src}}" class="">
        <div class="post-content">
          <h2 class="title">{{destaque.title}}</h2>
          <div class="content">
            {{destaque.content | excerpt(30)}}
          </div>
          <div class="meta">
            <div class="date">
              <div class="day">{{destaque.post_date | date("d")}}</div>
              <div class="month">{{destaque.post_date | date("M")}}</div>
            </div>
            por <a href="">{{destaque.author}}</a>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
    <div class="large-6 columns">
      <ul class="small-block-grid-2">
        {% for destaque in destaques | slice(1, 4) %}
        <li>
          <div class="post olders">
            <img src="{{destaque.thumbnail.src}}" class="" alt="Thumbnail para {{destaque.title}}">
            <div class="post-content">
              <h3 class="title">{{destaque.title}}</h3>
              <div class="meta">
                <div class="date">
                  <div class="day">{{destaque.post_date | date("d")}}</div>
                  <div class="month">{{destaque.post_date | date("M")}}</div>
                </div>
                por <a href="">{{destaque.author}}</a>
              </div>
            </div>
          </div>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>

<section id="videos">
  <div class="row">
    <div class="large-12 columns">
      <h2 class="section-title">Videos</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-4 columns">
      <div class="flex-video"> <iframe width="420" height="315" src="//www.youtube.com/embed/aiBt44rrslw" frameborder="0" allowfullscreen></iframe> </div>
    </div>
    <div class="large-4 columns">
      <div class="flex-video"> <iframe width="420" height="315" src="//www.youtube.com/embed/aiBt44rrslw" frameborder="0" allowfullscreen></iframe> </div>
    </div>
    <div class="large-4 columns">
      <div class="flex-video"> <iframe width="420" height="315" src="//www.youtube.com/embed/aiBt44rrslw" frameborder="0" allowfullscreen></iframe> </div>
    </div>
  </div>
  <div class="row">
    <div class="large-2 large-offset-10 columns text-right">
      <a href="#">ver todos</a>
    </div>
  </div>
</section>

<section id="social">
  <div class="row">
    <div class="large-12 columns">
      <h2 class="section-title">Últimas notícias</h2>
    </div>
  </div>
  <div class="row">
    <div class="large-5 columns">
      <div class="last-news">
        <ul class="list-last-news">
          {% for noticia in ultimas_noticias %}
          <li class="news">
            <a href="{{noticia.link}}">
              <h3 class="title {{ cycle(['even','odd'],loop.index) }}">{{noticia.title}}</h3>
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>

      <div class="text-right view-all">
        <a href="#">ver todas</a>
      </div>

    </div>
  </div>
</section>

{% endblock %}